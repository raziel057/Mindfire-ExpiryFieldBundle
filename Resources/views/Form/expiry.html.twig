{# render expiry widget #}
{% block expiry_widget %}
    <div {{ block('widget_container_attributes') }}>
        {{ date_pattern|replace({
            '{{ year }}':  form_widget(form.year, {'attr':{'class': 'expiry-year'} }),
            '{{ month }}': form_widget(form.month,{'attr':{'class': 'expiry-month'} }),
            '{{ day }}':  null
        })|raw }}
        <input type="hidden" name="{{ form.day.vars.full_name}}" value="{{ form.day.vars.value }}" />
    </div>
{% endblock expiry_widget %}
